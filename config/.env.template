# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=linkedin_sales_automation
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Or use connection string
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_32_chars_minimum
JWT_EXPIRES_IN=30d

# AI API Configuration
AI_PROVIDER=deepseek
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=deepseek-chat

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Internal API Key (for scheduled tasks)
INTERNAL_API_KEY=your_internal_api_key_for_cron_jobs

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (Optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
